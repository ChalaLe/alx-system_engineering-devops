defaults
    mode http
    timeout client 15s
    timeout connect 10s
    timeout server 15s
    timeout http-request 10s

frontend iamitsfoss-frontend
    bind *:80
    bind *:443 ssl crt /etc/haproxy/certs/iamitsfoss.tech.pem
    default_backend iamitsfoss-backend

backend iamitsfoss-backend
    http-request redirect scheme https if  !{ ssl_fc }
    balance roundrobin
    server 179779-web-01 54.157.187.166:80 check
    server 179779-web-02 54.144.142.183:80 check
